<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{ object[0].id }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
    </div>
    <div class="modal-body">
    <!-- carrousel of picture -->
    <div id="myCarousel" class="carousel slide h-75" data-ride="carousel">
        <div class="carousel-inner">
            {% if object[0].screenshots is defined %}
                {% for screen in object[0].screenshots %}
                {% if loop.first %}
                    <div class="carousel-item active">
                {% else %}
                    <div class="carousel-item">
                {% endif %}
                        <img class="d-block w-100" src="http://{{ screen.url|replace({'thumb': 'screenshot_med'}) }}?auto=yes&bg=777&fg=555">
                    </div>
                {% endfor %}
                
            {% endif %}    
            {% if object[0].artworks is defined %}
                {% for art in object[0].artworks %}
                {% if loop.first and object[0].screenshots is defined%}
                    <div class="carousel-item">
                {% else %}
                    <div class="carousel-item">
                {% endif %}                   
                        <img class="d-block w-100" src="http://{{ art.url|replace({'thumb': 'screenshot_med'}) }}?auto=yes&bg=777&fg=555">
                    </div>
                {% endfor %}
                
            {% endif %}      
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>